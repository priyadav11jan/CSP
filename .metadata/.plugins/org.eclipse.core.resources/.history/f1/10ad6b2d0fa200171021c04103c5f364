package com.pangaea.util;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.Assert;
import org.testng.annotations.BeforeTest;
import org.testng.annotations.Test;

public class TestClass {
	
	
   @BeforeTest(description="Test if url is launching")
	public void settings(){
		System.setProperty("webdriver.chrome.driver","C:\\Users\\priyadav\\Downloads\\chromedriver_win32\\chromedriver.exe"); //setting path to the driver
		  
		WebDriver driver=new ChromeDriver();
		
		driver.manage().window().maximize();
		driver.manage().timeouts().implicitlyWait(30, TimeUnit.SECONDS);
		driver.get("https://www.flipkart.com/");
		
	}
   @Test(priority=-3,description="Test if user is able to login")
   public void loginsuccess() throws Exception{
	   WebDriver driver=new ChromeDriver();
	  
	WebElement wb =driver.findElement(By.xpath("//a[contains(text(),'Sell')]"));
	   wb.click();
	   
	   Thread.sleep(2000);
	   
	   String title=driver.getTitle();
	   
	   Assert.assertEquals(title,"Sell Online on Flipkart|Grow your business with the leader in Indian e-commerce");
	   System.out.println("Test completed");
	   
	   
   }
   
   

}
